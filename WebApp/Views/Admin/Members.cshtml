@using Business.Entities
@using WebApp.ViewModels
@model MembersViewModel

@{
    ViewData["Title"] = "Team Members";
}


@await Html.PartialAsync("Partials/Sections/_AddMembersForm", Model.AddForm)
@* @await Html.PartialAsync("Partials/Sections/_EditMembersForm", Model.EditForm) *@

<section id="team-members">

    <header style="display: flex; justify-content: space-between; align-items: center;">
        <h2>Team Members</h2>
        <button type="button" data-modal="true" data-target="#addMemberModal" class="btn btn-add btn-blue">
            Add Member
        </button>
    </header>

</section>

<section id="members">
 

    <div class="members-list">


     @if (Model != null)
     {
     @foreach(var member in Model.Members)
     {
            <div class="card member">
                <h4 class="name">@member.FirstName @member.LastName</h4>
                <div class="jobtitle">@member.JobTitle</div>
                <div class="email">@member.Email</div>
                 <div class="phone">@member.Phone</div> 
                <div class="role"></div>
            </div>
     }

     }

    </div>
</section>