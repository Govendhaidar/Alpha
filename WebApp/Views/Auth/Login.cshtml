@model MemberLoginForm

@{
    Layout = "_LayoutCenterScreen";

    ViewData["Title"] = "Log In";
}



<section id="login">
    <form asp-controller="Auth" asp-action="Login" method="post" class="login-form" novalidate enctype="multipart/form-data">
       <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl"/>


        <h1> @ViewData["Title"] </h1>


       
        
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>

     


       @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage)) 
        {
            <div class="alert-notification error"> 
               @ViewBag?.ErrorMessage 
           </div> 

        } 

            <div class="form-group">
                <div class="checkbox-group">
                    <input type="checkbox" id="rememberme" name="RememberMe" />
                    <label for="rememberMe">Remember Me</label>
                </div>
                <button type="submit" class="btn btn-blue btn-submit">Log In</button>
            </div>

        <div class="form-footer">
            <span>Don´t have an account?</span>
            <a asp-controller="Auth" asp-action="SignUp">Sign up</a>
        </div>
    </form>
</section>

