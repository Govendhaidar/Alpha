<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha Portal</title>
    <script type="importmap"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>



    <div class="portal">
       

        <div class="logotype">
            @await Html.PartialAsync("Partials/Components/_AlphaLogotype")

        </div>

        <div class="side">
            @await Html.PartialAsync("Partials/Components/_NavLinks")
        </div>


        <div id="head">
            <form class="search-form" method="get" asp-controller="" asp-action="" novalidate>
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="search" class="form-search-input" placeholder="Search anything..." />
            </form>

          <div id="notification-container">
            <button type="button" data-type="dropdown" data-target="#notification-dropdown" class="btn-notification">
                <i class="gear fa-duotone fa-solid fa-gear" style="--fa-primary-opacity: 0.4; --fa-secondary-opacity: 01;"></i>
            </button>

            <div id="notification-dropdown" class="dropdown dropdown-show">
                <div class="dropdown-header">
                    <h4>Notification</h4>
                    <div class="badge-1 badge-red">0</div>
                </div>

                <div class="divider"></div>

                <div class="notifications">
                    <div class="notification" data-notification-type="user">
                        <div class="user-image">
                            <img class="img-2" src="~/images/avatar.svg.svg" alt="template avatar" />
                        </div>
                        <span class="message">Govend Haidar signed in. <br /> </span>
                        <span class="time">10 min ago</span>
                    </div>
                </div>

            </div>
          </div>




            <div id="account-container">
            <button type="button" data-type="dropdown" data-target="#account-dropdown" class="btn-account">
                <img class="img-1" src="~/images/avatar.svg.svg" alt="template avatar" />

            </button>

            <div id="account-dropdown" class="dropdown hide">
                <div class="dropdown-header">
                    <div class="account-name">
                            <img src="~/images/avatar.svg.svg" alt="template avatar" />
                            <span>Govend Haidar</span>
                    </div>
                </div>
                <div class="dropdown-body">
                    <nav class="dropdown-options">
                        <div class="dropdown-option">
                            <label for="darkModeToggle" class="switch-label">
                                <i class="fa-duotone fa-solid fa-cog"></i>
                                <span>Dark Mode</span>
                            </label>
                            <label class="switch">
                                <input type="checkbox" id="darkModeToggle" data-type="toggle" data-func="darkmode">
                                <span class="slider"></span>
                            </label>
                        </div>
                    </nav>

                    <div class="divider"></div>

                    <nav class="dropdown-actions">
                    <a class="dropdown-action" href="#">
                        <i class="fa-duotone fa-solid fa-right-from-bracket"></i>
                        <span>Logout</span>
                    </a>
                    </nav>
                </div>
            </div>
            </div>


            @* <div class="header-top"> @
    @ <a class="btn btn-blue btn-logout" asp-controller="Auth" asp-action="Logout">Log out</a> @
    @ </div> *@
        </div>

        <div class="main">
            @RenderBody()
        </div>

       
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
